<?xml version="1.0"?>
<labwc_config>
  <pointer>
    <!-- Osynlig markörtema — markören är skapad av deploy-scriptet -->
    <theme>invisible</theme>
    <size>1</size>
  </pointer>
  <keyboard>
    <!-- Öppna terminal: Ctrl+Alt+T -->
    <keybind key="C-A-t">
      <action name="Execute">
        <command>foot</command>
      </action>
    </keybind>
  </keyboard>
</labwc_config>
